<h4>Documents in activity</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Documents.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documents.First().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documents.First().TimeStamp)
        </th>
        <th>
            Uploader
        </th>
        <th></th>
    </tr>

    @foreach (var document in Model.Documents)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => document.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => document.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => document.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => document.User.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Documents", new { id = document.DocumentId }, null)
                @if (User.IsInRole("Teacher"))
                {
                    <span>|</span>
                    @Html.ActionLink("Edit", "Edit", "Documents", new { id = document.DocumentId }, null) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", "Documents", new { id = document.DocumentId }, null)
                }
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Upload New Document", "Create", "Documents", new { activityId = Model.ActivityId }, null)
</p>


